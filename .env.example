# JARVISv3 Configuration
# Copy this file to .env and update values as needed

# Application Configuration
APP_NAME=JARVISv3
APP_VERSION=0.1.0
APP_ENV=development

# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8000
FRONTEND_PORT=3000

# Data Directory Configuration
# Directory for runtime artifacts like database and vector store files
JARVIS_DATA_DIR=./data

# Database Configuration
DATABASE_URL=sqlite:///data/JARVISv3.db

# Redis Caching (optional, improves performance)
ENABLE_CACHE=true
REDIS_URL=redis://localhost:6379/0

# API Keys and External Services
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
GOOGLE_API_KEY=

# Budget and Resource Limits
MONTHLY_BUDGET_USD=100.0
TOKEN_BUDGET_PER_WORKFLOW=1000
MAX_CONTEXT_SIZE_BYTES=1000000

# Privacy and Security
PRIVACY_LEVEL=medium
ENCRYPTION_KEY=

# Logging and Monitoring
LOG_LEVEL=INFO
SENTRY_DSN=
